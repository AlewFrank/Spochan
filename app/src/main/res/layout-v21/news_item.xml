<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="8dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/newsImageView"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="230dp"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp">


                <Button
                    android:id="@+id/previousImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_left_24" />


                <ImageView
                    android:id="@+id/previousImageBackGround"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_for_buttons_for_news"
                    android:alpha="0.7"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="90dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp">


                <Button
                    android:id="@+id/nextImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />


                <ImageView
                    android:id="@+id/nextImageBackGround"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_for_buttons_for_news"
                    android:alpha="0.7"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/newsTitleTextView"
                android:layout_below="@+id/newsImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="#333333"
                android:textSize="22sp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="Заголовок"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_below="@+id/newsImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_point_for_news_count_enable_24"/>


                <ImageView
                    android:id="@+id/point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_point_for_news_count_disable_24"/>

                <ImageView
                    android:id="@+id/point3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_point_for_news_count_disable_24"/>

                <ImageView
                    android:id="@+id/point4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_point_for_news_count_disable_24"/>

                <ImageView
                    android:id="@+id/point5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_point_for_news_count_disable_24"/>

            </LinearLayout>




        </RelativeLayout>


        <TextView
            android:id="@+id/newsDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Описание новости"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsTimeTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text = "News Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333333"
                android:alpha="0.54"
                android:textStyle="italic"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/newsDataTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text = "News Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333333"
                android:alpha="0.54"
                android:textStyle="italic"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>








    </LinearLayout>
</androidx.cardview.widget.CardView>