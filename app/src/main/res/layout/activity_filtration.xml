<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration.FiltrationActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_for_filtration_activity">

        <EditText
            android:id="@+id/firstNameEditText"
            android:hint="Никита"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/background_for_items_for_filtration_activity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Имя"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/White"/>

        <EditText
            android:id="@+id/secondNameEditText"
            android:hint="Петров"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/background_for_items_for_filtration_activity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Фамилия"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/White"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/daysEditText"
                android:background="@drawable/background_for_items_for_filtration_activity"
                android:hint="13"
                android:textSize="30sp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <EditText
                android:id="@+id/monthsEditText"
                android:background="@drawable/background_for_items_for_filtration_activity"
                android:hint="12"
                android:textSize="30sp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <EditText
                android:id="@+id/yearsEditText"
                android:background="@drawable/background_for_items_for_filtration_activity"
                android:hint="2000"
                android:textSize="30sp"
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/maleButton"
                android:layout_width="54dp"
                android:layout_height="54dp"
                style="@style/ButtonRegistration"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="M"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/femaleButton"
                android:layout_width="54dp"
                android:layout_height="54dp"
                style="@style/ButtonSexForFiltration"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Ж"
                android:textSize="30sp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groupListRecycleView"
            android:visibility="visible"
            android:padding="4dp"
            android:scrollbars="horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/okButton"
                android:onClick="okButton"
                android:layout_width="144dp"
                android:layout_height="54dp"
                style="@style/ButtonRegistration"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="OK"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/cancelButton"
                android:onClick="cancelButton"
                android:layout_width="144dp"
                android:layout_height="54dp"
                style="@style/ButtonRegistration"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/cancel"
                android:layout_weight="1"/>
        </LinearLayout>
















    </LinearLayout>


</RelativeLayout>