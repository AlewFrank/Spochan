<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/competitionImageView"
                android:background="@drawable/competitions_item_background"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#121111">

                <TextView
                    android:id="@+id/competitionTitleTextView"
                    android:text = "Competition Title"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/competitionLocationTextView"
                    android:text = "Competition Location"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:textStyle="italic"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />


                <TextView
                    android:id="@+id/competitionDataTextView"
                    android:text = "Competition Data"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textStyle="italic"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="17sp"
                    android:text="@string/address" />

                <TextView
                    android:id="@+id/competitionAddressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="17sp"
                    android:layout_marginLeft="4dp"
                    android:text="@string/not_indicated"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/competitionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="@string/not_indicated"
                android:layout_marginTop="17dp"/>

            <Button
                android:id="@+id/registerOnCompetitionButton"
                android:visibility="gone"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="@string/competition_registration"
                android:textColor="@color/White"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/openRegListTextView"
                android:onClick="openRegList"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/open_reg_list"
                android:textStyle="italic"
                android:textSize="17sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/radioButtonsLinearLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/firstGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_1"
                    android:layout_marginStart="15dp" />

                <RadioButton
                    android:id="@+id/secondGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_2"
                    android:layout_marginStart="15dp" />

                <RadioButton
                    android:id="@+id/thirdGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_3"
                    android:layout_marginStart="15dp" />

                <RadioButton
                    android:id="@+id/forthGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_4"
                    android:layout_marginStart="15dp" />

                <RadioButton
                    android:id="@+id/fifthGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_5"
                    android:layout_marginStart="15dp" />

                <RadioButton
                    android:id="@+id/sixGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_6"
                    android:layout_marginStart="15dp" />

                <RadioButton
                    android:id="@+id/sevenGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_7"
                    android:layout_marginStart="15dp" />

                <RadioButton
                    android:id="@+id/eightGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_8"
                    android:layout_marginStart="15dp" />

                <RadioButton
                    android:id="@+id/nineGroupRadioButton"
                    android:layout_marginLeft="15dp"
                    android:onClick="onRadioButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/group_9"
                    android:layout_marginStart="15dp" />


                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_your_group" />
            </LinearLayout>








        </LinearLayout>

    </ScrollView>




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="80dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_edit"
        android:focusable="true" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        android:layout_alignParentBottom="true"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>